<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">


        <Button
            android:id="@+id/button1"
            android:gravity="fill"
            android:onClick="playPhrase"
            android:tag="canyouspeakenglish"
            android:text="Can you\nspeak\nEnglish?"
            android:textSize="22dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button2"
            android:gravity="fill"
            android:tag="goodevening"
            android:onClick="playPhrase"
            android:text="Good Evening"
            android:textSize="22dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button3"
            android:gravity="fill"
            android:onClick="playPhrase"
            android:tag="hello"
            android:text="Hello"
            android:textSize="22dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button4"
            android:gravity="fill"
            android:onClick="playPhrase"
            android:tag="howareyou"
            android:text="How are You?"
            android:textSize="22dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button5"
            android:gravity="fill"
            android:onClick="playPhrase"
            android:tag="mynameis"
            android:text="My name is..."
            android:textSize="22dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button7"
            android:gravity="fill"
            android:tag="please"
            android:onClick="playPhrase"
            android:text="Please"
            android:textSize="22dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button8"
            android:gravity="fill"
            android:tag="welcome"
            android:onClick="playPhrase"
            android:text="Welcome"
            android:textSize="22dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button6"
            android:gravity="fill"
            android:tag="whereisbathroom"
            android:onClick="playPhrase"
            android:text="Where is\nBathroom?"
            android:textSize="22dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>